<%
var title;
var postList = [];
console.log(page)
if (page.category) {
  site.categories.forEach(function(item) {
    if(item.name === page.category) {
      postList = item.posts.slice();
    }
  });
  title = page.category;
}
else if (page.tag) {
  site.tags.forEach(function(item) {
    if(item.name === page.tag) {
      postList = item.posts;
    }
  });
  title = page.tag;
} else {
  postList = site.posts;
}
%>

<section class="main clearfix">

  <% postList.each(function(item){ %>
    <%- partial('_partial/article-index', {item: item}) %>
    <% }); %>

  </section><!-- end main -->
